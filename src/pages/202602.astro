<style>

  @font-face {
    font-family: 'Bianzhidai';
    src: url('/font_bianzhidai/bianzhidai_COLR-GRAY.otf') format('opentype');
  }


  /*this section is for the black cursor that expands when hovering over a link*/
    * {
    cursor: none;
  }

  .cursor {
    position: fixed;
    top: 0;
    left: 0;
    width: 12px;
    height: 12px;
    background: black;
    border-radius: 50%;
    pointer-events: none;
    transform: translate(-50%, -50%);
    transition: width 0.1s ease, height 0.5s ease, border-radius 0.5s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    z-index: 9999;
  }

  .cursor.expanded {
    width: 200px;
    height: 44px;
    border-radius: 44px;
  }

